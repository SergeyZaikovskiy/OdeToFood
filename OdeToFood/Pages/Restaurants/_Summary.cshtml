@using OdeToFood.Core
@model Restaurant

<div class="card">
    <div class="card-header">
        <h3>Restaurant: @Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span> 
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-outline-info" asp-route-restaurantId="@Model.Id" asp-page="./Detail">
                    <img src="~/images/zoom-in.svg">
                </a>          
                <a class="btn btn-outline-info" asp-route-restaurantId="@Model.Id" asp-page="./Edit">
                    <img src="~/images/edit.svg">
                </a>
                <a class="btn btn-outline-info" asp-route-restaurantId="@Model.Id" asp-page="./Delete">
                    <img src="~/images/trash.svg">
                </a>
    </div>
</div>
